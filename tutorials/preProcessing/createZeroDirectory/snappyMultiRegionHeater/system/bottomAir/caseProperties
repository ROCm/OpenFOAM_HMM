FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      caseProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

initialConditions
{
    alphat  uniform 0;
    U       uniform (0.01 0 0);
    p       uniform 100000;
    p_rgh   uniform 100000;
    rho     uniform 8000;
    T       uniform 300;
}


boundaryConditions
{
    thermalWalls
    {
        category    wall;
        type        noSlip;
        patches     (minX maxX minY minZ maxZ);
        options
        {
            wallFunction highReynolds;
            motion      stationary;
            heatTransfer adiabatic;
        }
        values
        {
            $:initialConditions;
        }
    }
    thermalCoupledWalls
    {
        category    wall;
        type        noSlip;
        patches     (".*_to_.*");
        options
        {
            wallFunction highReynolds;
            motion      stationary;
            heatTransfer thermalCoupled;
        }
        values
        {
            $:initialConditions;
        }
    }
}


