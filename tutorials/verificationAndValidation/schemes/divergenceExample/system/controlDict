FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     scalarTransportFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         100;

deltaT          0.005;

writeControl    timeStep;

writeInterval   100;

purgeWrite      1;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{
    sample1
    {
        type        sets;
        libs        ("libsampling.so");
        writeControl onEnd;
        setFormat   raw;
        sets
        (
            line1
            {
                type        uniform;
                axis        distance;

                // Slightly perturbed so as not to align with face or edge
                start       (0 1 0.00501);
                end         (1 0 0.00501);
                nPoints     200;
            }
        );
        interpolationScheme cellPoint;
        fields          (T);
    }
}

// ************************************************************************* //
