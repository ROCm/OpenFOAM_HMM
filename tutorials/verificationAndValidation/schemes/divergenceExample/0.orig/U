FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (1 1 0);

boundaryField
{
    top
    {
        type            zeroGradient;
    }

    bottom
    {
        type            fixedValue;
        value           $internalField;
    }

    left
    {
        type            fixedValue;
        value           $internalField;
    }

    right
    {
        type            zeroGradient;
    }

    frontAndBack
    {
        type            empty;
    }
}


