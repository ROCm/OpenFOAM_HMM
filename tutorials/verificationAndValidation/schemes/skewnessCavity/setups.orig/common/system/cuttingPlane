cuttingPlaneError
{
    type                surfaces;
    libs                (sampling);
    surfaceFormat       vtk;
    fields              ( error );
    interpolationScheme cell;

    surfaces
    {
        zNormal
        {
            type    cuttingPlane;
            point   (0 0.05 -0.05);
            normal  (0 0 1);
        }
    }
}


cuttingPlaneMagError
{
    type                surfaces;
    libs                (sampling);
    surfaceFormat       vtk;
    fields              ( magError );
    interpolationScheme cell;

    surfaces
    {
        zNormal
        {
            type    cuttingPlane;
            point   (0 0.05 -0.05);
            normal  (0 0 1);
        }
    }
}


