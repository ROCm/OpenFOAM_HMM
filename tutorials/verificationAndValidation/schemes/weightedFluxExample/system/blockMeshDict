a  0.5;
b -0.5;
h1  -1;
h2   1;

vertices
(
    ($a $a $h1)
    ($b $a $h1)
    ($b $b $h1)
    ($a $b $h1)

    ($a $a $h2)
    ($b $a $h2)
    ($b $b $h2)
    ($a $b $h2)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (1 1 100) simpleGrading (1 1 1)
);

