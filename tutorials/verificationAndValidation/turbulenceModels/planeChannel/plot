    set key spacing 0.75
    set xlabel "y^+"
    set ylabel "{/Symbol e}^+"
    set output "$image"
    set title "Setup: $setup" noenhanced

    # Benchmark
        benchmark="$benchmarkFile"

    # OpenFOAM
        samples="$sampleFile"

    plot \
        benchmark u 2:(-\$3) t "DNS" w p ps 2 pt 7 lc rgb "#ffc020", \
        samples u (\$1*$uTau/$nu):(\$2*$nu/$uTau**4) t "OpenFOAM" w l lw 2 lc rgb "#4169e1"
PLT_Y_VS_EPSILON
}


