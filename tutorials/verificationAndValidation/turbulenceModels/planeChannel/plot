    setups=$@

    benchmarkDir="$FOAM_TUTORIALS/verificationAndValidation/turbulentInflow/oneCellThickPlaneChannel"
    benchmarkFile="$benchmarkDir/resources/dataset/chan395.kbal"

    n=0
    for setup in $setups
    do
