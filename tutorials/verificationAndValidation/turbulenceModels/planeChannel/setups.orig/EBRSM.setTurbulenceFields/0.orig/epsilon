FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 2 -3 0 0 0 0 ];

internalField   uniform 33.6; // Lardeau14-Coel Eq. 21

boundaryField
{
    "(bottom|top)"
    {
        type            epsilonWallFunction;
        lowReCorrection true;
        value           uniform 0;
    }

    "(inlet|outlet)"
    {
        type            cyclic;
    }

    leftAndRight
    {
        type            empty;
    }
}


