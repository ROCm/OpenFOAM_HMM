FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    inlet
    {
        type            turbulentDigitalFilterInlet;
        fsm             true;
        n               ( 70 64 );
        L
        (
            0.04446467692
            0.172787596
            0.1728125
        );
        mean
        {
            type        mappedFile;
            mapMethod   nearest;
            fieldTable  TMean;
        }
        R
        {
            type        mappedFile;
            mapMethod   nearest;
            fieldTable  TR;
        }
        AMIMethod       nearestFaceAMI;
        value           $internalField;
    }

    outlet
    {
        type            inletOutlet;
        inletValue      uniform 0;
        value           uniform 0;
    }

    "(bottom|top)"
    {
        type            zeroGradient;
    }

    "(left|right)"
    {
        type            cyclic;
    }
}


