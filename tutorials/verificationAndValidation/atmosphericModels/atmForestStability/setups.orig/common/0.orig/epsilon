FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform 0.1;

boundaryField
{
    bottom
    {
        type            atmEpsilonWallFunction;
        kappa           0.40;
        Cmu             0.03;
        z0              uniform 0.028;
        value           uniform 0.028;
    }

    top
    {
        type            slip;
    }

    "(inlet|outlet|left|right)"
    {
        type            cyclic;
    }
}


