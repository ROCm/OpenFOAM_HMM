    T
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-15;
        relTol          0.1;
        maxIter         10;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    pRefCell    0;
    pRefValue   0;
}

