FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      alphat;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0.0;

boundaryField
{
    bottom
    {
        type            atmAlphatkWallFunction;
        Cmu             0.09;
        kappa           0.40;
        Pr              0.90;
        z0              uniform 0.30;
        Prt             uniform 0.74;
        value           uniform 0.30;
    }

    top
    {
        type            calculated;
        value           uniform 0;
    }

    "(inlet|outlet|left|right)"
    {
        type            cyclic;
    }
}


