FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 -1 0 0 0 0];

internalField   uniform 0.003;

boundaryField
{
    "p[0-9]+"
    {
       type            fixedValue;
       value           $internalField;
    }

    terrain
    {
        type            atmOmegaWallFunction;
        kappa           0.4;
        Cmu             0.09;
        z0              uniform 0.05;
        value           uniform 0.0;
    }

    top
    {
        type            slip;
    }
}


