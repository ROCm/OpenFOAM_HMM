FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      extrudeMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

constructFrom   surface;

surface         "<constant>/triSurface/channel.vtk";

flipNormals     false;

extrudeModel    polyline;

nLayers         200;

expansionRatio  1.0;

polylineCoeffs
{
    vertices 10
    (
        ( 0 0 0.05 )            //0
        ( 0 0 0.75 )
        ( 0 -0.3 1.05 )         //2
        ( 0 -0.7 1.05 )
        ( 0 -1 1.35 )           //4
        ( 0 -1 1.75 )
        ( 0.3 -1 2.05 )         //6
        ( 0.826794919 -1 2.05 )
        ( 1.08660254 -1 1.9 )   //8
        ( 1.5 -1 1.183974596 )
    );

#if ${USE_ARC:-true}
    //- Using arcs
    edges
    (
        line 0 1
        arc  1 2 ( 0 -0.087867966 0.962132034 )
        line 2 3
        arc  3 4 ( 0 -0.912132034 1.137867966 )
        line 4 5
        arc  5 6 ( 0.087867966 -1 1.962132034 )
        line 6 7
        arc  7 8 ( 0.976794919 -1 2.009807621 )
        line 8 9
    );
#else
    //- Using spline (different shape):
    edges
    (
        spline 0 9
        (
            ( 0 0 0.05 )
            ( 0 0 0.5 )
            ( 0.5 0  0.5 )
            ( 0.5 0  0 )
            ( 1.5 0  0 )
            ( 1.5 -1 0 )
            ( 1.5 -1 1.183974596 )
        )
    );
#endif

    toleranceCheck  1e-6;
}

mergeFaces false;

mergeTol 0;


