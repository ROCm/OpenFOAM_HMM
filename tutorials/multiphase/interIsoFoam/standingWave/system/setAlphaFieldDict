FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setAlphaFieldDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

field       alpha.water;
type        sin;
direction   (1 0 0);
up          (0 0 1);
origin      (-0.5 0 0.5);
period      2;
amplitude   0.05;

