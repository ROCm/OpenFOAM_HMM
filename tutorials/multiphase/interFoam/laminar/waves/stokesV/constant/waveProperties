{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      waveProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

inlet
{
    alpha           alpha.water;

    waveModel       StokesV;

    nPaddle         1;

    waveHeight      0.1;

    waveAngle       0.0;

    rampTime        4.0;

    activeAbsorption yes;

    wavePeriod      2.0;
}

outlet
{
    alpha           alpha.water;

    waveModel       shallowWaterAbsorption;

    nPaddle         1;
}


