FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha.water 0
);

regions
(
    faceToFace
    {
        set         injectorFaces;

        fieldValues
        (
            volScalarFieldValue alpha.water 1
            volVectorFieldValue U (0 -15 0)
        );
    }
);


