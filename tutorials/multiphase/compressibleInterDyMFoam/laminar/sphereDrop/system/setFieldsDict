FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha.water 0 // Air
);

regions
(
    boxToCell
    {
        box (-20 -20 -1) (20 0 1);
        fieldValues
        (
            volScalarFieldValue alpha.water 1 // Water
        );
    }
);
