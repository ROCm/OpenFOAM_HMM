{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

actions
(
    {
        name    bgr0;       // all around bgr
        type    cellSet;
        action  new;
        source  zoneToCell;
        zone    background;
    }
    {
        name    hullBox0;       // all around hull
        type    cellSet;
        action  new;
        source  zoneToCell;
        zone    hullBox;
    }
    {
        name    propeller0;       // all around propeller
        type    cellSet;
        action  new;
        source  zoneToCell;
        zone    propeller;
    }
    {
        name    rudder0;       // all around rudder
        type    cellSet;
        action  new;
        source  zoneToCell;
        zone    rudder;
    }

    {
        name    box;   //all cells
        type    cellSet;
        action  new;
        source  cellToCell;
        set     propeller0;
    }


    {
        name    box;   // hole in mesh
        type    cellSet;
        action  subset;
        source  boxToCell;
        boxes
        (
            (0.005 -0.061 -0.0199)( 0.018 -0.0199 0.0199) //propeller
        );
    }

    {
        name    box;
        type    cellSet;
        action  invert;
    }
    {
        name    keepBox;   //all cells
        type    cellSet;
        action  new;
        source  cellToCell;
        set     box;
    }
    {
        name    keepBox;   //all cells
        type    cellSet;
        action  add;
        source  cellToCell;
        set     rudder0;
    }
    {
        name    keepBox;   //all cells
        type    cellSet;
        action  add;
        source  cellToCell;
        set     hullBox0;
    }
    {
        name    keepBox;   //all cells
        type    cellSet;
        action  add;
        source  cellToCell;
        set     bgr0;
    }
);

