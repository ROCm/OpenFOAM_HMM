    implicitCoeffs
    {
        alphaMin 0.001;
        rhoMin 1.0;
        applyGravity false;
        applyLimiting   false;
        particleStressModel
        {
            type HarrisCrighton;
            alphaPacked 0.9;
            pSolid 5.0;
            beta 2.0;
            eps 1.0e-2;
        }
