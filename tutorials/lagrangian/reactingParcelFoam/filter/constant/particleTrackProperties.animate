FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      particleTrackProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

cloud           reactingCloud1;

sampleFrequency 1;

maxPositions    1000000;

//maxTracks       5;

setFormat       gltf;

formatOptions
{
    animate         yes;
    colour          yes;

    animationInfo
    {
        colour          field;
        colourField     d;
        //min             0;
        //max             0.002;
        //alpha           1.0;
    }
}

fields          (d);


