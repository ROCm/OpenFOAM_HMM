FoamFile
{
    version     2.0;
    format      ascii;
    class       areaScalarField;
    object      hf_film;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions          [0 1 0 0 0 0 0];

internalField       uniform 0.0001;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    top
    {
        type        fixedValue;
        value       uniform 0.002;
    }

    bottom
    {
        type        zeroGradient;
    }

    frontAndBack
    {
        type        zeroGradient;
    }
}


