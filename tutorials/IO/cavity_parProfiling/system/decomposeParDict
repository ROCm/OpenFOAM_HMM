FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains  20;
method              scotch;
coeffs
{
    // Divide into 20/10=2 nodes
    domains (10);
    // Inside a node the communication weight is 1% of that inbetween nodes
    domainWeights (0.01);
}



