FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    note        "mesh decomposition control dictionary";
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains  3;

method          hierarchical;

hierarchicalCoeffs
{
    n           (3 1 1);
    delta       0.001;
    order       xyz;
}

