samples
{
    type            surfaces;
    libs            (sampling);

    // Time control etc
    ${_visualization};

    fields          (p U);

    // surfaceFormat   vtk;
    surfaceFormat   none;

    verbose         false;

    interpolationScheme cellPoint;

    surfaces
    {
        yNormal
        {
            type            cuttingPlane;
            planeType       pointAndNormal;
            interpolate     true;
            store           true;
            pointAndNormalDict
            {
                point   (0 0 0);
                normal  (0 1 0);
            }
        }
    }
}


