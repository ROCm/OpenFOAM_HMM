planes
{
    type            surfaces;
    libs            (sampling);

        // Time control etc
    ${_visualization};

    fields          ( p U );

    // surfaceFormat   vtk;
    surfaceFormat   none;

    store           true;

    interpolationScheme cellPoint;

    _plane
    {
        type    plane; //cuttingPlane;
        point   (0 0 0);
        normal  (1 0 0);
    }

    surfaces
    {
        plane0
        {
            ${_plane}
            point   (0 0 0);
        }

        plane1
        {
            ${_plane}
            point   (-0.1 0 0);
        }
    }

    #remove _plane
}


