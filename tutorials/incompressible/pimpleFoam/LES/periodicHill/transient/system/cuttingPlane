FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      cuttingPlane;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

functions
{
    cuttingPlane
    {
        type            surfaces;
        libs            (sampling);
        writeControl    writeTime;

        surfaceFormat   vtk;
        fields          ( p U );

        interpolationScheme cellPoint;

        surfaces
        {
            yNormal
            {
                type            cuttingPlane;
                planeType       pointAndNormal;
                pointAndNormalDict
                {
                    point   (0 0 0.063);
                    normal  (0 0 1);
                }
                interpolate     true;
            }
        }
    }
}


