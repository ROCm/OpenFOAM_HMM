FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    inlet
    {
        type            zeroGradient;
    }

    outlet
    {
        type            fixedMean;
        meanValue       0;
        value           $internalField;
    }

    bottomWall
    {
        type            zeroGradient;
    }

    topWall
    {
        type            slip;
    }

    "zPeriodic_.*"
    {
        type            cyclic;
    }
}

