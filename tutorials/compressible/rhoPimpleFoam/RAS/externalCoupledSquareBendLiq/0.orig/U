FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            flowRateInletVelocity;
        massFlowRate    constant 0.01;
        rhoInlet        1000;    // Guess for rho
    }

    outlet
    {
        type            pressureInletOutletVelocity;
        value           $internalField;
    }

    "(?i).*walls"
    {
        type            noSlip;
    }
}


