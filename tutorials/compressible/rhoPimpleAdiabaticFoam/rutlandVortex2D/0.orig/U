FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (50 0 0);

boundaryField
{
    top
    {
        type            slip;
    }

    bottom
    {
        type            slip;
    }

    left
    {
        type            fixedValue;
        value           uniform (50 0 0);
    }

    right
    {
        type            inletOutlet;
        inletValue      uniform (0 0 0);
        value           uniform (50 0 0);
    }

    frontAndBack
    {
        type            empty;
    }
}

