FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      extrudeMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

constructFrom    patch;

// If construct from patch/mesh:
sourceCase       "../main";
sourcePatches    (fixedWall window);

exposedPatchName fixedWall;

