FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "templates";
    object      wall;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

noSlip
{
    p
    {
        type        zeroGradient;
    }
    nut
    {
        type        calculated;
        value       ${:VALUE.nut};
    }

    OPTIONS         (wallFunction motion);
}


slip
{
    U
    {
        type        slip;
    }
    p
    {
        type        zeroGradient;
    }
    nut
    {
        type        calculated;
        value       ${:VALUE.nut};
    }
    k
    {
        type        zeroGradient;
    }
    epsilon
    {
        type        zeroGradient;
    }
    omega
    {
        type        zeroGradient;
    }
}


