#!/bin/sh
cd "${0%/*}" || exit                                # Run from this directory
. ${WM_PROJECT_DIR:?}/wmake/scripts/AllwmakeParseArguments # (error catching)
. ${WM_PROJECT_DIR:?}/wmake/scripts/have_fftw

#------------------------------------------------------------------------------

if have_fftw
then
    wmake $targetType
else
    echo "==> skip boxTurb utility (no FFTW)"
fi

#------------------------------------------------------------------------------
